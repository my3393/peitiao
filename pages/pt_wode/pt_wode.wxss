/* pages/pt_wode/pt_wode.wxss */
page{
  background: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.active{
  color: #fe5ba9;
}
.tp{
  margin-top: 20rpx;
}
.toux{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: red;
  overflow: hidden;
  float: left;
  margin-right: 20rpx;
}
.toux image{
  width: 100%;
  height: 100%;
}
.names{
  line-height: 80rpx;
  width:580rpx;
  overflow: hidden;    
  text-overflow:ellipsis;    
  whitewhite-space: nowrap;
   
}
/* 购物订单 */
.gouw{
  font-size: 24rpx;
}
.dingd{
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 170rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  box-shadow: 1px 2px 4px #666;
}
.gg{
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #333;
  text-align: center;
  width: 25%;
  float: left;
}
.fukuan>image{
  width:40rpx;
  height: 40rpx; 
}
/* 积分 */
.jifen{
  height: 132rpx;

}

.tarfid{
  height: 98rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  font-size: 24rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.tarfid>view{
  width: 33.3%;
  float: left;
}
.tarfid>view>view>image{
  width: 40rpx;
  height: 40rpx;
}