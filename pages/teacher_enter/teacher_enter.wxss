/* pages/teacher_enter/teacher_enter.wxss */
page{
  background: #f2f2f2;
  font-size: 30rpx;
}
.btn{
  height: 60rpx;
}
.event{
  margin-left: 20rpx;
  color: #898989;
  font-size: 24rpx;  
  line-height: 60rpx;
}
.infor{
  background: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 4rpx dotted #f2f2f2;
  line-height: 100rpx;
}
.inform{
  display: inline-block;
  vertical-align: middle;
  margin-right: 20rpx;
}
.inforin{
  display: inline-block;
  vertical-align: middle;
}
.inforin input{
  width: 500rpx;
  letter-spacing: 2rpx;
}
.forin{
  
  width: 100%;
  line-height: 40rpx;

}
.enter{
  float: right;
}
.enter image{
  width: 14rpx;
  height: 26rpx;
}
.submit{
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  border-radius: 40rpx;
  height: 80rpx;
  background: #F861AA;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin-top: 40rpx;
}
.pick{
  display: inline-block;
  color: #666;
  width: 500rpx;
}

.yd{
  position: relative;
  left: 0;
  top: 0;
  background: #c76363;
  opacity: 0.3;
  width: 100%;
  height: 100%;
}


.intor{
  width: 100%;
  height: 300rpx;
}

/* 地区选择 */
.mwrap{
	width: 100%;
	position: fixed;
	bottom: 0;
	left: 0;
}
.mtitle{

	height: 80rpx;
	line-height: 80rpx;
	background-color: #e6e6e6 !important;
	width: 100%;
	font-size: 30rpx;
	color: #333;
	text-align: center;
}
.province{
	background-color: white;
	width: 100%;
	height: 520rpx;
	overflow: scroll;
	-webkit-overflow-scrolling: touch;
}
.province view{
	line-height: 80rpx;
	padding-left: 40rpx;
	box-sizing: border-box;
	border-bottom: 1px solid #DDDDDD;
	font-size: 28rpx;
	color: #333;
}
.province_active{
	background-color: #FE5BA9;
	color: white !important;
}

/* 类型选择 */
.ilebels{
    width: 100%;
    height: 600rpx;
    background-color: white;
    position: fixed;
    bottom: 0;
    left: 0;
}
.tops{
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
    box-sizing: border-box;
    line-height: 80rpx;
}
.quxiao{
    color: #999999;
    font-size: 32rpx;
}
.sure{
    color: #1AAD19;
    font-size: 32rpx;
}
.ilablein{
    width: 100%;
    height: 520rpx;
    overflow: scroll;
    padding: 20rpx;
    box-sizing: border-box;
    -webkit-overflow-scrolling: touch;
}
.ilablein text{
    display: inline-block;
    width: 200rpx;
    line-height: 60rpx;
    border-radius: 6rpx;
    border: 1px solid #808080;
    text-align: center;
    margin-left: 25rpx;
    margin-bottom: 20rpx;
    color: #808080;
    font-size: 26rpx;
}
.iact{
    color: #fe5ba9 !important;
    border: 1px solid #fe5ba9 !important;
}